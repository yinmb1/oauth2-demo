        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.oauthserver.role.mapper.SysUserMapper">
    <select id="findByUserName" resultType="com.example.oauthserver.role.entity.SysUser" parameterType="string">

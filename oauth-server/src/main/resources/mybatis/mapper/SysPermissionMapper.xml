<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.oauthserver.role.mapper.SysPermissionMapper">
    <select id="findByIds" parameterType="list" resultType="com.example.oauthserver.role.entity.SysPermission">
        SELECT * FROM sys_permission WHERE id in
        <foreach collection="list" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>

</mapper>